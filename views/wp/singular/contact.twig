{% extends 'page.twig' %}

{% block breads %}
  <div class="breads-container uk-container uk-container-small">
    {% include 'breads.twig' %} 
  </div>
{% endblock %}

{% block page_content %}

  <section class="page-content-section uk-section uk-section-small uk-container uk-container-small" data-template="contact.twig">
      
    <div uk-grid>
      
      <div class="contact-page-left uk-width-2-3@m">
        
        <h3>{{ __('Email us:', 'urban-carnival-theme') }}</h3>
      
        <ul uk-tab uk-switcher>
          
          {% for post in contact_forms %}
            <li>
              <a href="#">
                {{ post.post_title|e('esc_html') }}
              </a>
            </li>
          {% endfor %}
          
        </ul>
        
        <ul class="uk-switcher uk-margin">
          
          {% for post in contact_forms %}
            <li>
              {% set form_title = post.post_title %}
              {{ function('do_shortcode', '[contact-form-7 title="' ~ form_title|e('esc_html') ~ '"]') }}
            </li>
          {% endfor %}
          
        </ul>
      
      </div>
      
      <div class="contact-page-right uk-width-1-3@m">
      
        <h4>{{ __('Our Office:', 'urban-carnival-theme') }}</h4>
      
        <p>
          {{base_address|e('esc_html')}}, {{base_address_2|e('esc_html')}},<br>
          {{base_city|e('esc_html')}}, {{base_county|e('esc_html')}},<br>
          {{ __('Eircode:', 'urban-carnival-theme') }} {{base_eircode|e('esc_html')}}.
        </p>
        
        <h4>{{ __('Contact Info:', 'urban-carnival-theme') }}</h4>
      
        <p>
          <a href="mailto:{{display_email|e('html_attr')}}">{{display_email|e('html_attr')}}</a>
        </p>
      
      </div>
        
    </div>

  </section>
{% endblock %}