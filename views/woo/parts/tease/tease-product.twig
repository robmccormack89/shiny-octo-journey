{{ fn('timber_set_product', post) }}

<div id="ProductItem{{ post.id|e('html_attr') }}" class="entry item grid-item product-grid-item uk-inline {{ post.class|e('html_attr') }}" data-product-id="{{ post.id|e('html_attr') }}">
  
  {% do action('woocommerce_before_shop_loop_item') %}
  
  <div id="ProductImg">
    <a class="single-product-image-link" href="{{ post.link|e('esc_url') }}">
      {% do action('woocommerce_before_shop_loop_item_title') %}
      <img data-src="{{ post.thumbnail.src|resize(400)|e('esc_url') }}" class="single-product-image" alt="{{ post.thumbnail.alt|e('html_attr') }}" uk-img>
    </a>
  </div>
  
  <div id="ProductDetails" class="uk-margin-small-top">
  
    <div id="ProductMeta" class="uk-article-meta push-down-5">
      {{ post.terms( {query:{taxonomy:'product_cat', orderby:'name', order: 'ASC', parent: 0, childless: 0, child_of: 0}} )|join(', ')|e('esc_html') }}
    </div>
    
    <div id="ProductTitle">
      {% do action('woocommerce_shop_loop_item_title') %}
      <h3 class="uk-h5 uk-margin-remove">
        <a class="uk-link-heading" href="{{ post.link|e('esc_html') }}">{{ post.title|e('esc_html') }}</a>
      </h3>
    </div>
    
    <div id="ProductPriceRating" class="push-down-5">
      {% do action( 'woocommerce_after_shop_loop_item_title' ) %}
    </div>
    
    <div id="ProductButtons">
      {% do action( 'woocommerce_after_shop_loop_item' ) %}
    </div>
    
  </div>

</div>